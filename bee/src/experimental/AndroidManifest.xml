<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name="com.apisense.bee.BeeExperimentalApplication"
        tools:replace="android:name,android:icon"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_bee_xp"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Apisense.Light">

        <service
            android:name="com.apisense.bee.services.EventObserver"
            android:exported="true"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">

            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/event_observer_accessibility_service" />

        </service>

    </application>



</manifest>
