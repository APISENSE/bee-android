<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/item"
                android:padding="@dimen/add_margin">

    <!--  ListRow Left side Thumbnail image -->
        <ImageView
            android:id="@+id/thumbnail"
            android:contentDescription="@string/experiment_image_description"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher"
            android:layout_marginRight="@dimen/add_margin"/>

    <LinearLayout
            android:id="@+id/experiment_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/thumbnail"
            android:layout_toEndOf="@+id/thumbnail">

        <!-- Experiment title-->
        <com.apisense.bee.widget.ApisenseTextView
                android:id="@+id/experimentelement_sampletitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <!-- Company -->
        <com.apisense.bee.widget.ApisenseTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/experimentelement_company"/>

    </LinearLayout>

    <!-- Description -->
    <com.apisense.bee.widget.ApisenseTextView
            android:id="@+id/experimentelement_short_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/experiment_header"
            android:layout_toRightOf="@+id/thumbnail"
            android:layout_toEndOf="@+id/thumbnail"/>

    <!-- Rightend Arrow -->
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_arrow"
               android:contentDescription="@string/arrow_description"
               android:layout_alignParentRight="true"
               android:layout_alignParentEnd="true"
               android:layout_centerVertical="true"/>

</RelativeLayout>