<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/registerView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <!-- Login Form -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--  Email Label -->
            <com.apisense.bee.widget.ApisenseTextView
                style="@style/ApisenseText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/pseudo" />

            <com.apisense.bee.widget.ApisenseEditText
                android:id="@+id/registerPseudo"
                style="@style/ApisenseEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true" />

            <!--  Password Label -->
            <com.apisense.bee.widget.ApisenseTextView
                style="@style/ApisenseText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/password" />

            <com.apisense.bee.widget.ApisenseEditText
                android:id="@+id/registerPassword"
                style="@style/ApisenseEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:singleLine="true" />

            <!--  Password confirm Label -->
            <com.apisense.bee.widget.ApisenseTextView
                style="@style/ApisenseText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/passwordConfirm" />

            <com.apisense.bee.widget.ApisenseEditText
                android:id="@+id/registerPasswordConfirm"
                style="@style/ApisenseEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:singleLine="true" />

            <!-- Hive -->
            <com.apisense.bee.widget.ApisenseTextView
                android:id="@+id/apisenseHive"
                style="@style/ApisenseText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/hive_label"
                android:visibility="invisible" />

            <com.apisense.bee.widget.ApisenseEditText
                android:id="@+id/apisenseEditText"
                style="@style/ApisenseEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/hive_url"
                android:visibility="invisible" />

            <!-- Login button -->
            <Button
                android:id="@+id/registerBtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/api_button_rounded"
                android:text="@string/register" />

            <com.apisense.bee.widget.ApisenseTextView
                android:id="@+id/anonymousBtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/register_anonymous" />

        </LinearLayout>
        <!-- Login Form Ends -->

    </RelativeLayout>
</ScrollView>