<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/home_item_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/thumbnail_margin"
        android:contentDescription="@string/experiment_image_desc" />

    <LinearLayout
        android:id="@+id/experiment_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/home_item_icon"
        android:layout_toEndOf="@id/home_item_icon"
        android:layout_toRightOf="@id/home_item_icon"
        android:orientation="vertical">

        <!-- Experiment title-->
        <com.apisense.bee.widget.ApisenseTextView
            android:id="@+id/experimentelement_sampletitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Company -->
        <com.apisense.bee.widget.ApisenseTextView
            android:id="@+id/experimentelement_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="32dp"

            android:background="@color/aps_light_grey" />

    </LinearLayout>

</RelativeLayout>
