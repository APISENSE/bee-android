
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context="com.apisense.bee.ui.activity.HomeActivity>" >

    <!-- User's infos -->
    <ImageView
            android:src="@drawable/unknown_user"
            android:layout_width="@dimen/thumbnail_size"
            android:layout_height="@dimen/thumbnail_size"
            android:id="@+id/home_user_image"
            android:layout_margin="@dimen/thumbnail_margin"
            android:layout_gravity="center_horizontal"/>

    <com.apisense.bee.widget.ApisenseTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_identity"
            android:id="@+id/home_user_identity"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/home_user_image"/>

    <!-- Gamification -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/game_padding"
            android:orientation="horizontal"
            android:background="@drawable/custom_border_square">

        <!-- Score and rank for example -->
        <com.apisense.bee.widget.ApisenseTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1850 Points"
                android:layout_weight="0.5"/>

        <com.apisense.bee.widget.ApisenseTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Rank #40"
                android:layout_weight="0.5"/>

    </LinearLayout>

    <!-- Exp list -->
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_experiment_lists"
            android:layout_below="@+id/home_user_identity"/>

    <!-- <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/home_login_logout_button"
        android:onClick="doLoginLogout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/> -->


</LinearLayout>