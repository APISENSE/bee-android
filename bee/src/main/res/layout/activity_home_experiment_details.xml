<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.apisense.bee.ui.activity.HomeExperimentDetailsActivity">

    <LinearLayout
        android:id="@+id/material_toolbar_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/material_toolbar"
            style="@style/ApisenseActionBarTransp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:popupTheme="@style/Theme.AppCompat.Light.NoActionBar" />
    </LinearLayout>

    <include
        android:id="@+id/home_exp_details_container"
        layout="@layout/common_experiment_details"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/material_toolbar_container" />


    <com.apisense.bee.widget.BarGraphView
        android:id="@+id/inbox_item_graph"
        style="@style/BarGraph"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_exp_details_container"
        android:minHeight="40sp"
        android:background="@drawable/custom_border_rounded"
        />

    <com.apisense.bee.widget.ApisenseTextView
        android:id="@+id/exp_activity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/inbox_item_graph"
        android:text="@string/experiment_activity_7_days"
        />

</RelativeLayout>
