<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/settings_manage_sensor_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_vertical_margin"
            android:layout_marginBottom="@dimen/text_vertical_margin"
            android:text="@string/settings_privacy_description"/>

        <Button
            android:id="@+id/settings_manage_sensor_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_manage_sensors"
            android:background="@color/aps_accent"
            android:textColor="@color/aps_white" />

        <TextView
            android:id="@+id/settings_accessibility_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_vertical_margin"
            android:layout_marginBottom="@dimen/text_vertical_margin"
            android:text="@string/settings_accessibility_description"/>

        <Button
            android:id="@+id/settings_accessibility_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/aps_accent"
            android:textColor="@color/aps_white" />

    </LinearLayout>
</ScrollView>
