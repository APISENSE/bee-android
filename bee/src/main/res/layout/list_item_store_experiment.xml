<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/experiment_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Experiment title-->
            <com.apisense.bee.widget.ApisenseTextView
                    android:id="@+id/experimentelement_sampletitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <!-- Company -->
            <com.apisense.bee.widget.ApisenseTextView
                android:id="@+id/experimentelement_company"
                    android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Description -->
        <com.apisense.bee.widget.ApisenseTextView
                android:id="@+id/experimentelement_short_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
            android:layout_below="@id/experiment_header" />
    </RelativeLayout>

    <com.apisense.bee.widget.ApisenseTextView
        style="@style/ApisenseSlideTinyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="bottom"
        android:text="INSTALLED" />
</RelativeLayout>