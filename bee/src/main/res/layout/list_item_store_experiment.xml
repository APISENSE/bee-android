<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/recycler_item_vertical_padding"
    android:paddingBottom="@dimen/recycler_item_vertical_padding"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:gravity="start"
            android:id="@+id/store_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_text_margin"
            android:textStyle="bold"
            android:textSize="@dimen/primary_text_size"
            android:layout_weight="1"/>

        <TextView
            android:gravity="end"
            android:id="@+id/store_item_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_text_margin"
            android:textSize="@dimen/secondary_text_size"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/store_item_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_text_margin"
            android:textSize="@dimen/secondary_text_size"
            android:gravity="start"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_text_margin"
            android:textSize="@dimen/secondary_text_size"
            android:text="\t-\t"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_text_margin"
            android:contentDescription="@string/exp_details_subscribers_description"
            android:src="@drawable/ic_subscribers"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/store_item_subscribers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_text_margin"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:textSize="@dimen/secondary_text_size"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_text_margin"
            android:textSize="@dimen/secondary_text_size"
            android:text="\t-\t"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/store_item_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_text_margin"
            android:layout_weight="1"
            android:gravity="end"
            android:textSize="@dimen/secondary_text_size"/>
    </LinearLayout>

    <TextView
        android:id="@+id/store_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_text_margin"
        android:textSize="@dimen/secondary_text_size"
        android:maxLines="2"
        android:textColor="@color/aps_secondary_text"/>

    <com.apisense.bee.ui.layout.SensorsLayout
        android:id="@+id/store_sensors_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.apisense.bee.ui.layout.SensorsLayout>

</LinearLayout>
