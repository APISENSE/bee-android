<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/detail_exp_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/toolbar_container"
        android:src="@drawable/ic_launcher_bee" />

    <com.apisense.bee.widget.ApisenseTextView
        android:id="@+id/detail_exp_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/detail_exp_icon"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_toEndOf="@id/detail_exp_icon"
        android:layout_toRightOf="@id/detail_exp_icon"
        android:text="@string/exp_details_name" />

    <com.apisense.bee.widget.ApisenseTextView
        android:id="@+id/detail_exp_organization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_exp_name"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_toEndOf="@id/detail_exp_icon"
        android:layout_toRightOf="@id/detail_exp_icon"
        android:text="@string/exp_details_organization" />

    <com.apisense.bee.widget.ApisenseTextView
        android:id="@+id/detail_exp_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/toolbar_container"
        android:layout_gravity="center_horizontal|center_vertical"
        android:text="@string/exp_details_version"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <GridView
        android:id="@+id/detail_exp_used_stings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/detail_exp_icon"
        android:layout_gravity="center_horizontal|center_vertical"
        android:columnWidth="40dp"
        android:gravity="start"
        android:numColumns="auto_fit"
        android:padding="5dp"
        android:stretchMode="columnWidth" />

    <com.apisense.bee.widget.ApisenseTextView
        android:id="@+id/detail_exp_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/detail_exp_used_stings"
        android:layout_gravity="center_horizontal|center_vertical"
        android:text="@string/exp_details_description" />

</RelativeLayout>
