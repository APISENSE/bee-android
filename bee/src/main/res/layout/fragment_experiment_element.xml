<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--  ListRow Left side Thumbnail image -->
        <LinearLayout
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/thumbnail_margin">

            <ImageView
                android:id="@+id/list_image"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:contentDescription="@string/experiment_image_desc" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/experiment_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/thumbnail"
            android:layout_toEndOf="@id/thumbnail"
            android:layout_toRightOf="@id/thumbnail"
            android:orientation="vertical">

            <!-- Experiment title-->
            <com.apisense.bee.widget.ApisenseTextView
                android:id="@+id/experimentelement_sampletitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Company -->
            <com.apisense.bee.widget.ApisenseTextView
                android:id="@+id/experimentelement_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"

                android:background="@color/light_grey" />

        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>