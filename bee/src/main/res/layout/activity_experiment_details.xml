<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.apisense.bee.ui.activity.ExperimentDetailsActivity">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/material_toolbar"
        style="@style/ApisenseActionBar"
        app:popupTheme="@style/Theme.AppCompat.Light.NoActionBar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivToolbar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_launcher"
                android:contentDescription="@string/app_name" />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <com.apisense.bee.widget.ApisenseTextView
        android:id="@+id/exp_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp" />

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

    <com.apisense.bee.widget.ApisenseTextView
            android:id="@+id/exp_organization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <com.apisense.bee.widget.ApisenseTextView
            android:id="@+id/exp_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

