<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/sensor_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/game_padding"
        android:src="@drawable/ic_launcher_bee" />

    <Switch
        android:id="@+id/sensor_enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:checked="true" />

    <com.apisense.bee.widget.ApisenseTextView
        android:id="@+id/sensor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/sensor_icon"
        android:layout_toLeftOf="@id/sensor_enabled"
        android:layout_toRightOf="@id/sensor_icon"
        android:layout_toStartOf="@id/sensor_enabled"
        android:text="NAME" />

    <TextView
        android:id="@+id/sensor_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sensor_name"
        android:layout_toEndOf="@id/sensor_icon"
        android:layout_toLeftOf="@id/sensor_enabled"
        android:layout_toRightOf="@id/sensor_icon"
        android:layout_toStartOf="@id/sensor_enabled"
        android:text="this is the description placeholder"
        android:textStyle="italic" />


</RelativeLayout>
