<resources xmlns:tools="http://schemas.android.com/tools"
           xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="ApisenseTheme" parent="android:Theme.Holo">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionBarStyle">@style/ApisenseActionBar</item>
        <item name="android:actionBarWidgetTheme">@style/SearchBar</item>
        <item name="android:actionMenuTextColor">@color/actionBar_textColor</item>s
        <item name="android:windowContentOverlay">@drawable/actionbar_shadow_v2</item>

        <item name="android:popupMenuStyle">@android:style/Widget.Holo.Light.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@android:style/Widget.Holo.Light.ListView.DropDown</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_left_arrow</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.ActionButton.Overflow</item>
    </style>

    <!-- TextView Styles -->
    <style name="ApisenseSlideText" parent="android:Widget.TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="ApisenseBigText" parent="android:Widget.TextView">
        <item name="android:textSize">40sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:paddingBottom">20sp</item>
    </style>

    <style name="ApisenseText" parent="android:Widget.TextView">
        <item name="android:typeface">sans</item>
    </style>

    <!-- EditText Styles -->
    <style name="ApisenseEditText" parent="android:Widget.EditText">
        <item name="android:textColor">@color/orange</item>
    </style>

    <!-- ActionBar styles -->
    <style name="ApisenseActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/ApisenseActionBar.Text</item>
    </style>

    <style name="ApisenseActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.ActionButton.Overflow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu</item>
    </style>

    <style name="SearchBar">
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <!-- Header style -->
    <style name="sectionHeader" parent="@android:style/Widget.TextView">
        <item name="android:drawableBottom">@drawable/section_header</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Apisense Graph Bar -->
    <style name="BarGraph">
        <item name="viewsWeekdayColor">@color/barchart_weekday</item>
        <item name="viewsWeekendColor">@color/barchart_weekend</item>
    </style>

    <style name="BarGraphDeactived">
        <item name="viewsWeekdayColor">@color/barchart_weekday_deactived</item>
        <item name="viewsWeekendColor">@color/barchart_weekend_deactived</item>
    </style>
</resources>
