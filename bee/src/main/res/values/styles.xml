<resources>

    <!-- Base application theme. -->
    <style name="ApisenseTheme" parent="android:Theme.Holo">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ApisenseSlideText" parent="android:Widget.TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="ApisenseBigText" parent="android:Widget.TextView">
        <item name="android:textSize">40sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:paddingBottom">20sp</item>
    </style>

    <style name="ApisenseText" parent="android:Widget.TextView">
        <item name="android:typeface">sans</item>
    </style>

    <style name="sectionHeader" parent="@android:style/Widget.TextView">
        <item name="android:drawableBottom">@drawable/section_header</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
