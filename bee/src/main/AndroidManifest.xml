<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.apisense.bee">

    <!-- BEGIN APISENSE SETTINGS -->
    <uses-feature android:name="android.hardware.camera" />
    <!-- GCM permission -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- Used to store script in sdcard folder -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- Used to access to apisense remote service -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <!-- ***** Optional permission -->
    <uses-permission android:name="android.permission.READ_LOGS" />
    <!-- location permission -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_UPDATES" />
    <!-- phone permission -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- ? permission -->
    <uses-permission android:name="android.permission.GET_TASKS" />
    <!-- <uses-permission android:name="android.permission.INSTALL_PACKAGES"/> -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- END APISENSE SETTINGS -->

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name="com.apisense.bee.BeeApplication"
        android:allowBackup="true"
        android:allowClearUserData="true"
        android:icon="@drawable/ic_launcher_bee"
        android:label="@string/app_name"
        android:logo="@drawable/ic_launcher_bee"
        android:theme="@style/ApisenseTheme">
        <meta-data
            android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/gpg_app_id" />

        <meta-data
            android:name="com.google.android.gms.appstate.APP_ID"
            android:value="@string/gpg_app_id" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/android_key_app" />

        <activity
            android:name="com.apisense.bee.ui.activity.SlideshowActivity"
            android:label="@string/title_activity_slideshow">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.apisense.bee.ui.activity.HomeActivity"
            android:label="@string/title_activity_home"></activity>
        <activity
            android:name="com.apisense.bee.ui.activity.StoreActivity"
            android:label="@string/title_activity_store"
            android:parentActivityName="com.apisense.bee.ui.activity.HomeActivity"></activity>
        <activity
            android:name="com.apisense.bee.ui.activity.ExperimentDetailsActivity"
            android:label="@string/title_activity_experiment_details"
            android:parentActivityName="com.apisense.bee.ui.activity.HomeActivity"></activity>
        <activity
            android:name="com.apisense.bee.ui.activity.PrivacyActivity"
            android:label="@string/title_activity_privacy"
            android:parentActivityName="com.apisense.bee.ui.activity.HomeActivity"></activity>

        <service
            android:name="fr.inria.bsense.service.BeeSenseServiceManager"
            android:enabled="true" />

        <activity
            android:name=".ui.activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.apisense.bee.ui.activity.HomeActivity"></activity>
        <activity
            android:name="com.apisense.bee.ui.activity.StoreExperimentDetailsActivity"
            android:label="@string/title_activity_store_experiment_details"
            android:parentActivityName="com.apisense.bee.ui.activity.StoreActivity"></activity>
        <activity
            android:name=".ui.fragment.AboutSettingsFragment"
            android:label="@string/title_activity_about"
            android:parentActivityName="com.apisense.bee.ui.activity.HomeActivity"></activity>
        <activity
            android:name="com.apisense.bee.ui.activity.RewardActivity"
            android:label="@string/title_activity_reward"
            android:parentActivityName="com.apisense.bee.ui.activity.HomeActivity"></activity>

        <activity
            android:name="com.apisense.bee.ui.activity.SignInActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="com.apisense.bee.ui.activity.SlideshowActivity"></activity>

        <activity
            android:name="com.apisense.bee.ui.activity.RegisterActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="com.apisense.bee.ui.activity.SlideshowActivity"></activity>

        <activity
            android:name="com.apisense.bee.ui.activity.RewardDetailsActivity"
            android:label="@string/title_activity_reward"
            android:parentActivityName="com.apisense.bee.ui.activity.RewardActivity"></activity>
    </application>

</manifest>
